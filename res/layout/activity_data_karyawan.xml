        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnSemasaPemupukan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/semasapemupukan" />

            <Button
                android:id="@+id/btnSesudahPemupukan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sesudahpemupukan" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>